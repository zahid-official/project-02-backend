// Enum for Role
enum UserRole {
    ADMIN
    DOCTOR
    PATIENT
}

// Enum for Status
enum UserStatus {
    ACTIVE
    INACTIVE
    DELETED
}

// Enum for Gender
enum Gender {
    MALE
    FEMALE
}

// Enum for Appointment Status
enum AppointmentStatus {
    SCHEDULED
    INPROGRESS
    COMPLETED
    CANCELED
}

// Enum for Payment Status
enum PaymentStatus {
    PAID
    UNPAID
    FAILED
}

// Enum for Blood Group
enum BloodGroup {
    A_POSITIVE  @map("A+")
    A_NEGATIVE  @map("A-")
    B_POSITIVE  @map("B+")
    B_NEGATIVE  @map("B-")
    AB_POSITIVE @map("AB+")
    AB_NEGATIVE @map("AB-")
    O_POSITIVE  @map("O+")
    O_NEGATIVE  @map("O-")
}

// Enum for marital status
enum MaritalStatus {
    MARRIED
    UNMARRIED
}
